<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base Dark Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0A0E14"
                android:centerColor="#1A1F2A"
                android:endColor="#0F1418"
                android:angle="315"
                android:type="linear"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Top Light Accent -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#300061FF"
                android:endColor="@android:color/transparent"
                android:angle="90"
                android:type="linear"/>
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"/>
        </shape>
    </item>

    <!-- Border Glow -->
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#300061FF"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Inner Shadow -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#10000000"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

</layer-list>